<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/app_indents"
    android:layout_marginEnd="@dimen/app_indents"
    android:background="@drawable/rounded_view_bg">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tasks_desc_item_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:layout_marginStart="@dimen/app_indents"
        android:layout_marginEnd="@dimen/app_indents"
        android:backgroundTint="@color/color_back_secondary"
        android:gravity="top|start"
        android:hint="@string/text_item_desc_hint"
        android:theme="@style/primaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

